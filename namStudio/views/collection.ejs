<body>
  
  <%- include('./partials/header.ejs') %>
  <div class="container-fluid">
    
    <div class=" row">
      <div class="categorias col-2">
        <h6>CATEGORIAS</h6>
       
        <ul type="none">
          <li><a href="/collection/category?category=ANIMAL PRINT">ANIMAL PRINT</a></li>
          <li><a href="/collection/category?category=FLORALES">FLORALES</a></li>
          <li><a href="/collection/category?category=TROPICALES">TROPICALES</a></li>
          <li><a href="/collection/category?category=ABSTRACTOS">ABSTRACTOS</a></li>
          <li><a href="/collection/category?category=GEOMETRICOS">GEOMETRICOS</a></li>
          <li><a href="/collection/category?category=ORNAMENTALES">ORNAMENTALES</a></li>
          <li><a href="/collection/category?category=FIGURATIVOS">FIGURATIVOS</a></li>
        </ul>
      </div>   
      
      <div class="product col-10">
        <div class="container-fluid">
          <div class="row">
            
            <%for (let i=0; i< products.length; i++){%>
              <div data-product-id="<%=products[i].id%>" class="dsn col-12 col-sm-4 col-md-3 col-lg-3">
                
                <img  src="/data/cws/<%= products[i].cw1%>" height="150px">
                
                <a href="/collection/<%= products[i].id%>" class="btn btn-secondary">VER</a>
                
                <button type="submit" class="add-to-cart btn btn-secondary">AGREGAR AL CARRITO</button>
                
              </div>
              <% } %>
              
              
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <%- include('./partials/footer.ejs') %>   
    
