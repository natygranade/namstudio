<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> NAM Studio </title>
  <link rel="shortcut icon" type= "image/x-icon" href="/images/nam4x.png">
  <!-- Font Awesome Stylesheet -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/signup.css'>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;700&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/eb81e2a038.js" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('./partials/header.ejs') %> 
  
  
  <div class= "container">
    <div class="row titulo">
      <p class="titulo">REGISTRAR NUEVO ADMINISTRADOR</p>
    </div>
    <form class="row" method="POST" action= "/dashboard/newAdmin" enctype="multipart/form-data">
      
      <div class="form col-12 col-md-6">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" placeholder="email@ejemplo.com" aria-describedby="inputGroupPrepend">
      </div>

      <div class="form col-12 col-md-6">
        <label for="password">Contraseña</label>
        <input type="password" name="password" class="form-control"  placeholder="contraseña">
      </div>
      
      <div class="form col-12 col-md-6">
        <label for="name">Nombre y Apellido</label>
        <input type="text" name="name" class="form-control" >   
      </div>  

      <div class="form col-12 col-md-6">
        <label for="adress">Dirección</label>
        <input type="text" name="adress" placeholder="Calle 1234" class="form-control" >   
      </div>  

      <div class="form col-12 col-md-6">
        <label for="country">País</label>
        <input type="text" name="country" placeholder="argentina" class="form-control" >   
      </div> 
      
      <div class="form col-12 col-md-6">
        <label for="phone">Teléfono</label>
        <input type="tel" name="phone"  class="form-control" placeholder="(+54 9 11) 1234-5566 " >
      </div>
      
      <div class="form col-12 col-md-6">
        <label for="avatar">Foto de Perfil</label>
        <input type="file" name="avatar" >
      </div>
      
      <div class="form col-12 col-md-6">
        <input class="form-check-input" type="checkbox" name="terms" value="true" id="invalidCheck">
        <label class="form-check-label" for="invalidCheck"> Acepto los términos y condiciones </label>
      </div>
      
      <div class="form col-12 col-md-6">
          <label for="admin">Es administrador?</label></br>
        <div class="admin">
          <input class="form-check-input" type="radio" name="admin" value="1"> SI 
        </div>
        <div class="admin">
        <input class="form-check-input" type="radio" name="admin" value="0"> NO
      </div>
      </div>

      <div class="form col-12">
        <button id="register" class="btn btn-secondary" type="submit">NUEVO ADMIN</button>
      </div>
      <% if (typeof errors != 'undefined'){ %>
        <ul type= "none">
          <% for (let i=0; i <errors.length; i++){%>
            <li style="color:red"><%= errors[i].msg %></li>
            <%}%>
          </ul>
          <%}%>
          
    </div>

      </form>
      
      
    </div>
    <%- include('./partials/footer.ejs') %>   
    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    
  </body>
  </html>
  