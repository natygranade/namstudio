      .slider {
          margin: 5% 0.5% 4% 0%;
          /*background: url('contrasticon.png');*/
          -webkit-appearance: none;
          width: 67%;
          height: 20px;
          border-radius: 5px;
          background: #d3d3d3;
          outline: none;
          opacity: 0.7;
          -webkit-transition: .2s;
          transition: opacity .2s;
      }

      .slider::-webkit-slider-thumb {
          -webkit-appearance: none;
          appearance: none;
          width: 25px;
          height: 25px;
          border-radius: 50%;
          background: #40a6d8;
          cursor: pointer;
      }

      .slider::-moz-range-thumb {
          width: 25px;
          height: 25px;
          border-radius: 50%;
          background: #40a6d8;
          cursor: pointer;
      }

